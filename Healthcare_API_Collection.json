            ],
            "url": { "raw": "{{base_url}}/mappings/", "host": ["{{base_url}}"], "path": ["mappings", ""] }
          }
        },
        {
          "name": "Get Doctors by Patient",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/mappings/patient/1/", "host": ["{{base_url}}"], "path": ["mappings", "patient", "1", ""] }
          }
        },
        {
