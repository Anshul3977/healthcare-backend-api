{
  "info": {
    "name": "Healthcare API",
    "description": "Full REST API collection for the Django Healthcare Backend.\n\nSetup:\n1. Register a user via Auth → Register\n2. Login via Auth → Login\n3. Copy the access token from the response\n4. Set the `token` collection variable to the access token value\n\nAll authenticated endpoints use {{token}} in the Authorization header.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/auth/register/", "host": ["{{base_url}}"], "path": ["auth", "register", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@test.com\",\n  \"password\": \"Test123!\",\n  \"password2\": \"Test123!\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/auth/login/", "host": ["{{base_url}}"], "path": ["auth", "login", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"Test123!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.tokens && jsonData.tokens.access) {",
                  "    pm.collectionVariables.set('token', jsonData.tokens.access);",
                  "    console.log('Token saved automatically!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type",  "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/patients/", "host": ["{{base_url}}"], "path": ["patients", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"date_of_birth\": \"1990-05-15\",\n  \"gender\": \"M\",\n  \"phone\": \"9876543210\",\n  \"address\": \"123 Health Street, Medical City\",\n  \"medical_history\": \"No known allergies\"\n}"
            }
          }
        },
        {
          "name": "List Patients",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/patients/", "host": ["{{base_url}}"], "path": ["patients", ""] }
          }
        },
        {
          "name": "Get Patient",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/patients/1/", "host": ["{{base_url}}"], "path": ["patients", "1", ""] }
          }
        },
        {
          "name": "Update Patient",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type",  "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/patients/1/", "host": ["{{base_url}}"], "path": ["patients", "1", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"date_of_birth\": \"1990-05-15\",\n  \"gender\": \"M\",\n  \"phone\": \"9876543210\",\n  \"address\": \"456 Updated Avenue, New City\",\n  \"medical_history\": \"Updated: No known allergies. Annual checkup done.\"\n}"
            }
          }
        },
        {
          "name": "Delete Patient",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/patients/1/", "host": ["{{base_url}}"], "path": ["patients", "1", ""] }
          }
        }
      ]
    },
